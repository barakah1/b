<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:fillViewport="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/sixteen"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <com.example.barakah.utils.StepperIndicator
                android:id="@+id/stepper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:stpi_labels="@array/stepLabels"
                app:stpi_stepCount="3" />

            <LinearLayout
                android:layout_marginTop="@dimen/dp_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView

                    android:id="@+id/orderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/imageIv"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/dp_five"
                    android:paddingRight="10dp"
                    android:text="اسم العشبه"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/tvVendroName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/imageIv"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/dp_five"
                    android:paddingRight="10dp"
                    android:text="المتجر"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold"

                    />
            </LinearLayout>

            <TextView
                android:padding="@dimen/dp_five"
android:layout_marginTop="@dimen/dp_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/imageIv"
                android:background="@color/lightGray"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="طريقة التوصيل"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_fifty"
                android:orientation="vertical">

                <LinearLayout
                    android:padding="@dimen/dp_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightGray"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/herb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/price" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/quantity" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/tvHerb"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_weight="1" />


                </LinearLayout>
            </LinearLayout>

            <TextView
                android:padding="@dimen/dp_five"
                android:id="@+id/tvTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_fifty"
                android:layout_toLeftOf="@id/imageIv"
                android:background="@color/lightGray"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="السعر الاجمالي"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />
            <!--<androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvOrderItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />-->
        </LinearLayout>
    </ScrollView>
</layout>