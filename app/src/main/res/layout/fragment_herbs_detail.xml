<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/herb_pic"
                android:layout_width="332dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"

                android:src="@drawable/herb_pic">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="اسم العشبه"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"></TextView>

            <TextView
                android:id="@+id/herb_info"
                android:layout_width="300dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:background="@drawable/textview_border"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text=" (معلومات العشبه)"
                android:textColor="@color/lightGray"
                android:textSize="17dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardview1"
                    android:paddingBottom="12dp"

                    >

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_arrow_drop_down"
                        android:layout_gravity="right"
                        android:id="@+id/btn_expand1"></Button>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycleritem_name1"
                        android:text="فوائد العشبه "
                        android:layout_gravity="right"
                        android:layout_marginRight="40dp"
                        android:textSize="17dp"></TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/expandablelayout1"
                        android:layout_marginTop="30dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="herb info "
                            android:textSize="15dp"

                            ></TextView>
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bottomnav"
                    android:id="@+id/cardview2"
                    android:paddingBottom="12dp">

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_arrow_drop_down"
                        android:layout_gravity="right"
                        android:id="@+id/btn_expand2"></Button>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycleritem_name2"
                        android:text="التاٌثير الجانبي"
                        android:layout_gravity="right"
                        android:layout_marginRight="40dp"
                        android:textSize="17dp"></TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/expandablelayout2"
                        android:layout_marginTop="30dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="herb info"
                            android:textSize="15dp"

                            ></TextView>
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardview3"
                    android:paddingBottom="12dp">

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_arrow_drop_down"
                        android:layout_gravity="right"
                        android:id="@+id/btn_expand3"></Button>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycleritem_name3"
                        android:text="التعارضات"
                        android:layout_gravity="right"
                        android:layout_marginRight="40dp"
                        android:textSize="17dp"></TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/expandablelayout3"
                        android:layout_marginTop="30dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="herb info "
                            android:textSize="15dp"

                            ></TextView>
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardview4"
                    android:paddingBottom="12dp">

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_arrow_drop_down"
                        android:layout_gravity="right"
                        android:id="@+id/btn_expand4"></Button>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycleritem_name4"
                        android:text="البائعين والاسعار"
                        android:layout_gravity="right"
                        android:layout_marginRight="40dp"
                        android:textSize="17dp"></TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/expandablelayout4"
                        android:layout_marginTop="30dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="herb info "
                            android:textSize="15dp"

                            ></TextView>
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom">

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="189dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="70dp"
                    android:background="@color/colorPrimary"
                    android:text="اضافه الي السله"></Button>

                <ImageButton
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_favorite"></ImageButton>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</layout>